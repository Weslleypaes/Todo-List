<%- include('header'); -%>
     <div class="box" id="heading">
          <h1>
               <%= listTitle %>
          </h1>
     </div>

     <div class="box">
               <% newItemInput.forEach(function(item){ %>
                    <div class="item">
                         <input type="checkbox">
                         <p>
                            <%= item.name %>
                         </p>
                    </div>
               <% }) %>

               <form class="item" action="/" method="post">
                    <input type="text" name="newItem" placeholder="Novo item" autocomplete="off">
                    <button type="submit" name="list" value= <%= listTitle %> >+</button>
               </form>

     </div>

<%- include('footer'); -%>